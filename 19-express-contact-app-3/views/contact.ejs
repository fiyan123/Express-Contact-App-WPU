<style>
    .card-style {
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>
<div class="card card-style mt-3">
    <div class="card-header">
        <div class="card-title">
            <h4>Daftar List Contact</h4>
            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Contact</a>
        </div>
    </div>
    <div class="card-body">
        <div class="mt-3">
            <div class="row">
                <div class="col-md-12">
                    <% if (msg.length !==0) { %>
                        <div class="alert alert-success" role="alert">
                            <%= msg %>
                        </div>
                        <% } %>
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">No</th>
                                            <th scope="col">Nama</th>
                                            <th scope="col">No HP</th>
                                            <th scope="col">Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (contacts.length===0) { %>
                                            <tr>
                                                <td colspan="4">
                                                    <div class="alert alert-danger fw-bold" role="alert">
                                                        Data Contact Masih Kosong <br>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% } %>
                                                <% contacts.forEach(( contact, i )=> { i++ %>
                                                    <tr>
                                                        <th scope="row">
                                                            <%= i++ %>
                                                        </th>
                                                        <td>
                                                            <%= contact.nama %>
                                                        </td>
                                                        <td>
                                                            <%= contact.nohp %>
                                                        </td>
                                                        <td>
                                                            <a href="/contact/<%= contact.nama %>"
                                                                class="btn btn-info badge rounded-pill">
                                                                <i class="bi bi-info-circle"></i> Detail</a>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                    </tbody>
                                </table>
                            </div>
                </div>
            </div>
        </div>
    </div>
</div>