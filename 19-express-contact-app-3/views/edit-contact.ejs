<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h4>Form Ubah Data Contact</h4>

            <% if (typeof errors !='undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(err => { %>
                            <li><%= err.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <div class="card">
                <div class="card-header">
                    <div class="card-title"></div>
                </div>
                <div class="card-body">
                    <form method="POST" action="/contact/update">
                        <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>">
                        <div class="mb-3">
                            <label for="nama" class="form-label">Nama</label>
                            <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="nohp" class="form-label">No HP</label>
                            <input type="number" class="form-control" id="nohp" name="nohp" value="<%= contact.nohp %>" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Ubah Contact</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>