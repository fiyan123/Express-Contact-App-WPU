<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h4>Daftar List Contact</h4>

            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Contact</a>

            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role="alert">
                    <%= msg %>
                </div>
            <% } %>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nama</th>
                        <th scope="col">No HP</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (contacts.length === 0) { %>
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-danger fw-bold" role="alert">
                                    Data Contact Masih Kosong <br> 
                                </div>
                            </td>
                        </tr>
                    <% } %>
                    <% contacts.forEach(( contact, i ) => { i++ %>
                        <tr>
                            <th scope="row"><%= i++ %></th>
                            <td>
                                <%= contact.nama %>
                            </td>
                            <td>
                                <%= contact.nohp %>
                            </td>
                            <td>
                                <a href="/contact/<%= contact.nama %>" class="btn btn-primary badge rounded-pill">
                                    <i class="bi bi-info-circle"></i> Detail</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>